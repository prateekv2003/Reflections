generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Comment {
  text        String @default("")
  sentiment   String @default("positive")
  author      String @default("")
  authorImage String @default("")
}

model Blog {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  authors     String
  index       Int
  tags        String[]
  text        String
  timestamp   String
  title       String
  url         String
  authorImage String    @default("")
  authorId    String?   @db.ObjectId
  user        User?     @relation(fields: [authorId], references: [id])
  comments    Comment[]
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  avatar    String
  email     String   @unique
  password  String   @default("")
  name      String
  role      String
  blogs     Blog[]
  bookmarks String[]
}

model test {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}
